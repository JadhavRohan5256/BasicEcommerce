<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  	<welcome-file-list>
  		<welcome-file>index.jsp</welcome-file>
  	</welcome-file-list>
  	<!-- productList.jsp page url re-writting -->
  <servlet>
  	<servlet-name>allProduct</servlet-name>
  	<jsp-file>/productList.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>allProduct</servlet-name>
  	<url-pattern>/all_products</url-pattern>
  </servlet-mapping>
  
  	<!-- loginDetails.jsp page url re-writting -->
  <servlet>
  <servlet-name>login</servlet-name>
  	<jsp-file>/loginDetails.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/loginPage</url-pattern>
  </servlet-mapping>
  
  	<!-- registerUser.jsp page url re-writting -->
  <servlet>
  	<servlet-name>register</servlet-name>
  	<jsp-file>/registerUser.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>register</servlet-name>
  	<url-pattern>/registerPage</url-pattern>
  </servlet-mapping>
  
  
  	<!-- profileView.jsp page url re-writting -->
  <servlet>
  	<servlet-name>profile</servlet-name>
  	<jsp-file>/profileView.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>profile</servlet-name>
  	<url-pattern>/profile</url-pattern>
  </servlet-mapping>
  
  	<!-- profileView.jsp page url re-writting -->
  <servlet>
  	<servlet-name>product</servlet-name>
  	<jsp-file>/productView.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>product</servlet-name>
  	<url-pattern>/product</url-pattern>
  </servlet-mapping>
  
  
  	<!-- index.jsp page url re-writting -->
  <servlet>
  	<servlet-name>home</servlet-name>
  	<jsp-file>/index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>home</servlet-name>
  	<url-pattern>/homePage</url-pattern>
  </servlet-mapping>
  
  	<!-- checkout.jsp page url re-writting -->
  <servlet>
  	<servlet-name>checkout</servlet-name>
  	<jsp-file>/checkout.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>checkout</servlet-name>
  	<url-pattern>/checkout</url-pattern>
  </servlet-mapping>
  
  
  	<!-- admin.jsp page url re-writting -->
  <servlet>
  	<servlet-name>admin</servlet-name>
  	<jsp-file>/admin.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>admin</servlet-name>
  	<url-pattern>/adminPannel</url-pattern>
  </servlet-mapping>
  
  <!-- Error 404  -->
  <error-page>
  	<error-code>404</error-code>
  	<location>/error_404.jsp</location>
  </error-page>
</web-app>
